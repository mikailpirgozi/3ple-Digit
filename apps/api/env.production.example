# Production Environment Variables Template
# Copy this to .env.production and fill in real values

NODE_ENV=production
PORT=4000

# Database - Railway PostgreSQL
# Get this from Railway dashboard after creating PostgreSQL service
DATABASE_URL="postgresql://username:password@host:port/database"

# CORS - Your production domains
CORS_ORIGINS="https://your-app.vercel.app,https://3ple-digit.vercel.app"

# JWT/Auth - Generate strong secrets for production
# Use: openssl rand -base64 32
JWT_SECRET="your-super-secure-jwt-secret-at-least-32-characters-long-for-production"
JWT_EXPIRES_IN="7d"

# Cloudflare R2 - Production bucket
# Create these in Cloudflare dashboard
R2_ACCOUNT_ID="your-production-r2-account-id"
R2_ACCESS_KEY_ID="your-production-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-production-r2-secret-access-key"
R2_BUCKET_NAME="3ple-digit-documents-prod"
R2_PUBLIC_URL="https://your-production-bucket.r2.dev"

# Logging
LOG_LEVEL="info"
